{
    "name": "@up-beat/server",
    "version": "0.0.1",
    "description": "server uptime monitor",
    "author": "soorajshankar",
    "license": "MIT",
    "scripts": {
        "build": "rm -rf ./dist && tsc -p tsconfig.json --skipLibCheck && cp -R ./public ./dist ",
        "copy:ui": "cp -R  ./client/build/ ./public",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "nodemon",
        "start:debug": "nodemon --config nodemon-debug.json",
        "prestart:prod": "rimraf dist && npm run build",
        "start:ci": "node dist/src/main.js",
        "start:prod": "node dist/src/main.js",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/bull": "0.1.0",
        "@nestjs/common": "7.0.0",
        "@nestjs/config": "0.4.0",
        "@nestjs/core": "7.0.0",
        "@nestjs/graphql": "6.0.5",
        "@nestjs/jwt": "^7.0.0",
        "@nestjs/mongoose": "6.4.0",
        "@nestjs/passport": "^7.0.0",
        "@nestjs/platform-express": "7.0.0",
        "@nestjs/schedule": "0.4.2",
        "@nestjs/serve-static": "2.1.0",
        "apollo-server-express": "^2.4.8",
        "bull": "^3.13.0",
        "graphql": "^14.2.1",
        "graphql-tools": "^4.0.4",
        "lerna": "^3.20.2",
        "moment": "^2.24.0",
        "mongoose": "^5.5.1",
        "nodemailer": "^6.4.6",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "reflect-metadata": "^0.1.12",
        "rimraf": "^2.6.2",
        "rxjs": "^6.3.3",
        "type-graphql": "^0.17.1"
    },
    "devDependencies": {
        "@nestjs/testing": "^6.0.0",
        "@types/bull": "^3.12.1",
        "@types/express": "^4.16.0",
        "@types/jest": "^23.3.13",
        "@types/node": "^10.12.18",
        "@types/nodemailer": "^6.4.0",
        "@types/passport-jwt": "^3.0.3",
        "@types/passport-local": "^1.0.33",
        "@types/supertest": "^2.0.7",
        "jest": "^25.2.3",
        "nodemon": "^1.18.9",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.15.3",
        "supertest": "^3.4.1",
        "ts-jest": "^23.10.5",
        "ts-node": "^7.0.1",
        "tsconfig-paths": "^3.7.0",
        "tslint": "6.1.0",
        "typescript": "^3.2.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
